
@{
    ViewBag.Title = "AssignTask";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<section class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Add Donation</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Info boxes -->
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Donate</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form action="@Url.Action("PostTask","Admin")" method="post">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <!-- text input -->
                                        <input type="hidden" name="Donation_Id" value="@ViewBag.donationId" />
                                        <div class="form-group">
                                            <label>Select Volunteer</label>
                                            <select class="form-control select2" name="User_Id" style="width: 100%;">
                                                @foreach (var item in ViewBag.volunteers)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>Select Volunteer</label>
                                        <input type="text" class="form-control" value="@ViewBag.donationType" readonly />
                                    </div>
                                    <div class="col-sm-4">
                                        <label>Select Volunteer</label>
                                        <input type="text" class="form-control" value="@ViewBag.donationLoc" readonly />
                                    </div>
                                    <input type="hidden" name="IsActive" value="1" />
                                    <input type="hidden" name="CreatedAt" value="@DateTime.Now" />
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Add Note</label>
                                            <textarea name="Note" rows="3" class="form-control" placeholder="Enter note..."></textarea>   
                                        </div>
</div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->

                </div>
            </div>
        </div>
    </section>
</section>

